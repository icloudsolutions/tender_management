<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Settings for Notifications -->
    <record id="sh_vendor_signup_res_config_settings" model="ir.ui.view">
        <field name="name">purchase setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='purchase_setting_container']" position="after">
                <block title="Vendor Signup Configuration" name="vendor_signup_configuration">
                    <setting help='Get email notification on vendor signup.'>
                        <field name="is_enable_vendor_notification" />
                        <div class='d-flex'>
                            <label for="user_ids" invisible="is_enable_vendor_notification == False" class='me-3'/>
                            <field name="user_ids" widget="many2many_tags" invisible="is_enable_vendor_notification == False" domain="[('share', '=', False)]" />
                        </div>
                    </setting>
                    <setting>
                        <div class="col-12 col-lg-offset-12 col-lg-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_enable_auto_portal_user" />
                                <field name="is_enable_company_portal_user" invisible="is_enable_auto_portal_user == False"/>
                                <field name="is_enable_company_contact_portal_user" invisible="is_enable_auto_portal_user == False" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_enable_auto_portal_user" class='mb-2 d-block'/>
                                <label for="is_enable_company_portal_user" class='mb-2 d-block' style='margin-top: 5px;' invisible="is_enable_auto_portal_user == False" />
                                <label for="is_enable_company_contact_portal_user" style='margin-top: 7px;' class='d-block'  invisible="is_enable_auto_portal_user == False"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
