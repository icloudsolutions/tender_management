<odoo>
    <data noupdate="1">
        <!-- Scheduled Action: Fetch Tenders Daily at 6 AM -->
        <record id="ir_cron_fetch_etimad_tenders_daily" model="ir.cron">
            <field name="name">Fetch Etimad Tenders - Daily Sync</field>
            <field name="model_id" ref="model_ics_etimad_tender"/>
            <field name="state">code</field>
            <field name="code">model.action_fetch_tenders_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=6, minute=0, second=0)"/>
            <field name="priority">5</field>
        </record>
    </data>
</odoo>