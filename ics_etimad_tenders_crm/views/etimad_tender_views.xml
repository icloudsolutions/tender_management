<odoo>
    <!-- list/List View -->
    <record id="view_etimad_tender_list" model="ir.ui.view">
        <field name="name">etimad.tender.list</field>
        <field name="model">ics.etimad.tender</field>
        <field name="arch" type="xml">
            <list string="Etimad Tenders" 
                  decoration-warning="remaining_days &lt; 7 and remaining_days &gt; 0" 
                  decoration-danger="is_urgent" 
                  decoration-info="is_hot_tender" 
                  decoration-bf="is_favorite or is_participating"
                  multi_edit="1">
                
                <header>
                    <button name="%(action_server_fetch_etimad_tenders)d" 
                            string="Fetch Latest (50)" 
                            type="action" 
                            class="btn-primary"
                            icon="fa-refresh"
                            title="Fetch latest 50 tenders from Etimad portal"/>
                    <button name="%(action_server_fetch_batch_etimad_tenders)d" 
                            string="Fetch Batch (150)" 
                            type="action" 
                            class="btn-secondary"
                            icon="fa-refresh"
                            title="Fetch 150 tenders (3 pages) from Etimad portal"/>
                </header>
                
                <field name="is_favorite" widget="boolean_favorite" nolabel="1"/>
                <field name="reference_number" string="المرجع | Reference"/>
                <field name="name" string="اسم المنافسة | Tender Name"/>
                <field name="agency_name" string="الجهة | Agency"/>
                <field name="etimad_tender_type" string="النوع | Type"/>
                <field name="activity_name" string="النشاط | Activity" optional="hide"/>
                <field name="estimated_amount" widget="monetary" options="{'currency_field': 'currency_id'}" optional="show" string="القيمة التقديرية | Est. Value"/>
                <field name="estimated_value_category" widget="badge" optional="show" string="Value Category"
                       decoration-info="estimated_value_category == 'small'"
                       decoration-primary="estimated_value_category == 'medium'"
                       decoration-success="estimated_value_category == 'large'"
                       decoration-danger="estimated_value_category == 'mega'"/>
                <field name="matching_score" widget="progressbar" optional="show" string="Match %" />
                <field name="offers_deadline" string="آخر موعد للتقديم | Deadline"/>
                <field name="remaining_days" 
                       string="الوقت المتبقي | Days Left"
                       decoration-danger="is_urgent" 
                       decoration-warning="remaining_days &lt; 7 and remaining_days &gt; 3"/>
                <field name="document_cost_amount" widget="monetary" options="{'currency_field': 'currency_id'}" optional="hide" string="Document Cost"/>
                <field name="tender_status_text" optional="show" string="Etimad Status" widget="badge"/>
                <field name="is_participating" widget="boolean" optional="show" string="Participating"/>
                <field name="award_announced" widget="boolean" optional="hide" string="Awarded"/>
                <field name="opportunity_id" optional="show" string="Opportunity"/>
                <field name="deadline_extended" widget="boolean" optional="show" string="Extended"/>
                <field name="scraping_status" widget="badge" optional="hide" string="Data Status"
                       decoration-success="scraping_status == 'success'"
                       decoration-danger="scraping_status == 'failed'"
                       decoration-warning="scraping_status == 'partial'"/>
                
                <!-- Hidden fields for decorations -->
                <field name="currency_id" invisible="1"/>
                <field name="is_urgent" invisible="1"/>
                <field name="is_hot_tender" invisible="1"/>
                
                <button name="action_create_opportunity" 
                        string="Create Opportunity" 
                        type="object" 
                        class="btn-primary" 
                        icon="fa-plus-circle" 
                        invisible="opportunity_id"/>
                
                <button name="action_fetch_detailed_info" 
                        string="Fetch Details" 
                        type="object" 
                        class="btn-secondary" 
                        icon="fa-refresh"
                        title="Fetch detailed information from Etimad"/>
                
                <button name="action_open_url" 
                        string="Visit Etimad" 
                        type="object" 
                        class="btn-info" 
                        icon="fa-external-link"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_etimad_tender_form" model="ir.ui.view">
        <field name="name">etimad.tender.form</field>
        <field name="model">ics.etimad.tender</field>
        <field name="arch" type="xml">
            <form string="Etimad Tender" class="o_etimad_tender_form">
                <header>
                    <button name="action_toggle_participating" 
                            string="Mark as Participating" 
                            type="object" 
                            class="btn-success"
                            icon="fa-check"
                            invisible="is_participating"
                            help="Mark that your company is preparing a quotation for this tender"/>
                    <button name="action_toggle_participating" 
                            string="Unmark Participating" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-times"
                            invisible="not is_participating"
                            help="Remove participation flag"/>
                </header>
                
                <sheet>
                    <!-- Button Box - Sticky Actions -->
                    <div class="oe_button_box" name="button_box">
                        <!-- Favorite Toggle -->
                        <button name="action_toggle_favorite" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-star-o" 
                                invisible="is_favorite"
                                title="Add to Favorites">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Add to</span>
                                <span class="o_stat_text">Favorites</span>
                            </div>
                        </button>
                        <button name="action_toggle_favorite" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-star" 
                                style="color: #ffc107;" 
                                invisible="not is_favorite"
                                title="Remove from Favorites">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text" style="color: #ffc107;">Favorited</span>
                            </div>
                        </button>
                        
                        <!-- Opportunity Management -->
                        <button name="action_create_opportunity" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-handshake-o" 
                                invisible="opportunity_id"
                                title="Create CRM Opportunity">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Create</span>
                                <span class="o_stat_text">Opportunity</span>
                            </div>
                        </button>
                        
                        <button name="action_view_opportunities" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-handshake-o" 
                                invisible="not opportunity_id"
                                title="View Opportunity">
                            <field name="opportunity_count" widget="statinfo" string="Opportunity"/>
                        </button>
                        
                        <!-- Deadline Indicator -->
                        <button class="oe_stat_button" 
                                icon="fa-clock-o" 
                                title="Days until deadline">
                            <field name="remaining_days" widget="statinfo" string="Days Left"/>
                        </button>
                        
                        <!-- Deadline Extension Indicator -->
                        <button class="oe_stat_button" 
                                icon="fa-refresh" 
                                title="Deadline Extensions"
                                invisible="deadline_extensions_count == 0">
                            <field name="deadline_extensions_count" widget="statinfo" string="Extensions"/>
                        </button>
                        
                        <!-- External Link -->
                        <button name="action_open_url" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-external-link" 
                                invisible="not tender_url"
                                title="Open on Etimad Portal">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View on</span>
                                <span class="o_stat_text">Etimad</span>
                            </div>
                        </button>
                    </div>
                    
                    <!-- Status Ribbons -->
                    <widget name="web_ribbon" 
                            title="Favorite" 
                            bg_color="bg-warning" 
                            invisible="not is_favorite"/>
                    
                    <widget name="web_ribbon" 
                            title="Urgent" 
                            bg_color="bg-danger" 
                            invisible="remaining_days &gt; 3 or remaining_days &lt;= 0"/>
                    
                    <!-- Title Section -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Tender Name"/>
                        <h1 class="d-flex align-items-center">
                            <field name="name" 
                                   placeholder="Enter tender name..." 
                                   class="flex-grow-1"
                                   required="1"/>
                        </h1>
                        <div class="o_row">
                            <label for="reference_number" class="oe_edit_only" string="Reference"/>
                            <h3 class="text-muted">
                                <field name="reference_number" 
                                       placeholder="Reference will be set automatically" 
                                       readonly="1"/>
                            </h3>
                        </div>
                    </div>
                    
                    <!-- Main Information Groups -->
                    <group>
                        <group string="Tender Information" name="tender_info">
                            <field name="tender_number" 
                                   string="Tender Number"
                                   placeholder="Auto-filled from Etimad"/>
                            <field name="etimad_tender_type" 
                                   string="Etimad Type"
                                   placeholder="Tender type from Etimad"/>
                            <field name="activity_name" 
                                   string="Activity"
                                   placeholder="Tender activity"/>
                            <field name="agency_name" 
                                   string="Agency"
                                   placeholder="Government agency"/>
                            <field name="branch_name" 
                                   string="Branch"
                                   placeholder="Agency branch"/>
                            <field name="external_source" 
                                   string="Source" 
                                   readonly="1"/>
                        </group>
                        
                        <group string="Important Dates" name="dates_info">
                            <field name="created_on" 
                                   string="Created" 
                                   readonly="1"
                                   widget="date"/>
                            <field name="published_at" 
                                   string="Published"
                                   widget="datetime"/>
                            <field name="last_enquiry_date" 
                                   string="Enquiries Deadline"
                                   widget="datetime"/>
                            <field name="last_enquiry_date_hijri" 
                                   string="Enquiries (Hijri)"
                                   placeholder="Hijri date"/>
                            <field name="offers_deadline" 
                                   string="Offers Deadline"
                                   widget="datetime"
                                   class="o_field_highlight"/>
                            <field name="last_offer_date_hijri" 
                                   string="Offers (Hijri)"
                                   placeholder="Hijri date"/>
                            <field name="submission_date" 
                                   string="Submission Date"
                                   widget="datetime"/>
                        </group>
                    </group>
                    
                    <!-- Financial and CRM Information -->
                    <group>
                        <group string="Financial Information" name="financial_info">
                            <field name="currency_id" invisible="1"/>
                            <field name="document_cost_amount" 
                                   string="Document Cost"
                                   help="قيمة وثائق المنافسة"
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="estimated_amount"
                                   string="Estimated Value"
                                   help="القيمة التقديرية - Not always published"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                        
                        <group string="CRM Integration" name="crm_info">
                            <field name="opportunity_id" 
                                   string="Linked Opportunity"
                                   options="{'no_create': True}"/>
                            <div invisible="not opportunity_id" class="alert alert-info mt-2">
                                <i class="fa fa-info-circle"/> This tender is linked to a CRM opportunity
                            </div>
                            <div invisible="opportunity_id" class="alert alert-warning mt-2">
                                <i class="fa fa-exclamation-triangle"/> No opportunity created yet
                            </div>
                        </group>
                        
                        <group string="Etimad Updates" name="etimad_updates" invisible="not has_etimad_updates">
                            <field name="has_etimad_updates" invisible="1"/>
                            <field name="deadline_extended" readonly="1" widget="boolean"/>
                            <field name="deadline_extensions_count" readonly="1" string="Times Extended" invisible="deadline_extensions_count == 0"/>
                            <field name="last_deadline_extension_date" readonly="1" widget="datetime" invisible="not last_deadline_extension_date"/>
                            <field name="previous_offers_deadline" readonly="1" widget="datetime" string="Previous Deadline" invisible="not previous_offers_deadline"/>
                            <field name="last_significant_change" readonly="1" widget="text" string="Last Change" invisible="not last_significant_change"/>
                            <div invisible="not deadline_extended" class="alert alert-success mt-2">
                                <i class="fa fa-check-circle"/> <strong>Deadline Extended!</strong> This tender's deadline has been extended by Etimad. Check activities for details.
                            </div>
                        </group>
                    </group>
                    
                    <!-- Quick Actions Bar -->
                    <group invisible="not tender_url">
                        <div class="d-flex gap-2 mt-3">
                            <button name="action_open_url" 
                                    string="Open on Etimad Portal" 
                                    type="object" 
                                    class="btn btn-primary flex-grow-1" 
                                    icon="fa-external-link"
                                    title="Visit this tender on the Etimad website"/>
                            <button name="action_open_details_page" 
                                    string="View Details Page" 
                                    type="object" 
                                    class="btn btn-primary flex-grow-1" 
                                    icon="fa-file-text-o"
                                    invisible="not tender_id_string"
                                    title="Open detailed tender information page"/>
                            <button name="action_open_detailed_report" 
                                    string="View Report" 
                                    type="object" 
                                    class="btn btn-secondary flex-grow-1" 
                                    icon="fa-bar-chart"
                                    invisible="not tender_id_string"
                                    title="Open detailed tender report"/>
                            <button name="action_fetch_detailed_info" 
                                    string="Fetch Details" 
                                    type="object" 
                                    class="btn btn-warning flex-grow-1" 
                                    icon="fa-download"
                                    invisible="not tender_id_string"
                                    title="Fetch detailed information from Etimad API"/>
                            <button name="action_create_opportunity" 
                                    string="Create Opportunity" 
                                    type="object" 
                                    class="btn btn-success flex-grow-1" 
                                    icon="fa-plus-circle"
                                    invisible="opportunity_id"
                                    title="Create a CRM opportunity from this tender"/>
                        </div>
                    </group>
                    
                    <!-- Detailed Information in Notebook -->
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" 
                                   placeholder="Enter detailed tender description, requirements, and specifications..."
                                   widget="text"
                                   nolabel="1"/>
                        </page>
                        
                        
                        <page string="Technical Details" name="technical">
                            <group>
                                <group string="System Information">
                                    <field name="tender_id" readonly="1"/>
                                    <field name="tender_id_string" readonly="1"/>
                                    <field name="activity_id" readonly="1"/>
                                    <field name="tender_status_id" readonly="1"/>
                                    <field name="tender_url" readonly="1" widget="url"/>
                                </group>
                                <group string="Status Information">
                                    <field name="tender_status_text"/>
                                    <field name="tender_status_approved" readonly="1"/>
                                    <field name="is_participating" readonly="1"/>
                                    <field name="is_favorite" readonly="1"/>
                                    <field name="remaining_days" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab 1: Basic Information (المعلومات الأساسية) -->
                        <page string="1. Basic Information" name="enhanced_basic_info">
                            <group>
                                <group string="Contract &amp; Purpose">
                                    <field name="contract_duration"/>
                                    <field name="contract_duration_days"/>
                                    <field name="tender_purpose" widget="text" nolabel="1" placeholder="الغرض من المنافسة"/>
                                </group>
                                <group string="Status &amp; Approval">
                                    <field name="tender_status_text"/>
                                    <field name="tender_status_approved" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Submission Method">
                                    <field name="submission_method"/>
                                </group>
                            </group>
                            <group>
                                <group string="Insurance &amp; Guarantees">
                                    <field name="insurance_required"/>
                                    <field name="initial_guarantee_required" string="Initial Guarantee"/>
                                    <field name="initial_guarantee_type" 
                                           invisible="not initial_guarantee_required"
                                           string="Type"/>
                                    <field name="initial_guarantee_address"
                                           invisible="not initial_guarantee_required"
                                           string="Address"/>
                                    <field name="final_guarantee_required" 
                                           readonly="1"
                                           string="Final Guarantee"/>
                                    <field name="final_guarantee_percentage" 
                                           widget="percentage"
                                           invisible="not final_guarantee_required"
                                           string="Final %"/>
                                    
                                    <div invisible="not final_guarantee_required" class="alert alert-info mt-2">
                                        <i class="fa fa-bank"/> <strong>Final Guarantee (حسن الأداء):</strong><br/>
                                        Bank guarantee of <field name="final_guarantee_percentage" nolabel="1" readonly="1" widget="percentage"/> required after winning
                                    </div>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab 2: Dates &amp; Deadlines (العناوين والمواعيد المتعلقة بالمنافسة) -->
                        <page string="2. Dates &amp; Deadlines" name="enhanced_dates">
                            <group>
                                <group string="Offer Dates">
                                    <field name="offers_deadline" widget="datetime"/>
                                    <field name="offer_opening_date" widget="datetime"/>
                                    <field name="offer_examination_date" widget="datetime"/>
                                </group>
                                <group string="Inquiry Dates">
                                    <field name="last_enquiry_date" widget="datetime"/>
                                    <field name="inquiry_start_date"/>
                                    <field name="max_inquiry_response_days"/>
                                </group>
                            </group>
                            <group>
                                <group string="Award &amp; Work Dates">
                                    <field name="expected_award_date"/>
                                    <field name="suspension_period_days" string="Suspension Period (Days)"/>
                                    <field name="work_start_date"/>
                                </group>
                                <group string="Opening Location">
                                    <field name="opening_location"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab 3: Location &amp; Classification (مجال التصنيف وموقع التنفيذ) -->
                        <page string="3. Location &amp; Classification" name="enhanced_location">
                            <group>
                                <group string="Execution Location">
                                    <field name="execution_location_type"/>
                                    <field name="execution_regions" widget="text" placeholder="مناطق التنفيذ (Regions)"/>
                                    <field name="execution_cities" widget="text" placeholder="مدن التنفيذ (Cities)"/>
                                </group>
                                <group string="Contractor Classification">
                                    <field name="classification_field"/>
                                    <field name="classification_required"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab 4: Work Types (أنواع الأعمال) -->
                        <page string="4. Work Types" name="enhanced_work_types">
                            <group>
                                <group string="Tender Activity">
                                    <field name="activity_details" widget="text" nolabel="1" 
                                           placeholder="نشاط المنافسة (Tender Activity Details)"/>
                                </group>
                                <group string="Supply Items">
                                    <field name="includes_supply_items"/>
                                </group>
                            </group>
                            <group>
                                <group string="Construction Works">
                                    <field name="construction_works" widget="text" nolabel="1" 
                                           placeholder="أعمال الإنشاء (Construction Works)"/>
                                </group>
                                <group string="Maintenance &amp; Operation">
                                    <field name="maintenance_works" widget="text" nolabel="1" 
                                           placeholder="أعمال الصيانة والتشغيل (Maintenance &amp; Operation Works)"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab 5: Award Results (إعلان نتائج الترسية) -->
                        <page string="5. Award Results" name="enhanced_award">
                            <group>
                                <group string="Award Status">
                                    <field name="award_announced"/>
                                </group>
                            </group>
                            <div invisible="not award_announced" class="alert alert-success">
                                <i class="fa fa-check-circle"/> Award results have been announced
                            </div>
                            <div invisible="award_announced" class="alert alert-info text-center">
                                <i class="fa fa-info-circle" style="font-size:3rem"/> 
                                <br/>لم يتم اعلان نتائج الترسية بعد
                                <br/><small>Award results have not been announced yet</small>
                            </div>
                            <group invisible="not award_announced">
                                <group string="Award Details">
                                    <field name="award_announcement_date"/>
                                    <field name="awarded_company_name"/>
                                    <field name="awarded_amount" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab 6: Local Content & SME (المحتوى المحلي والمنشآت الصغيرة) -->
                        <page string="6. Local Content &amp; SME" name="local_content">
                            <group>
                                <group string="Local Content Requirements">
                                    <field name="local_content_required"/>
                                </group>
                            </group>
                            
                            <div invisible="local_content_required" class="alert alert-info text-center">
                                <i class="fa fa-info-circle" style="font-size:3rem"/> 
                                <br/>لا توجد متطلبات محتوى محلي
                                <br/><small>No local content requirements for this tender</small>
                            </div>
                            
                            <group invisible="not local_content_required">
                                <group string="Local Content Details">
                                    <field name="local_content_percentage" 
                                           widget="percentage"
                                           string="Minimum Required %"/>
                                    <field name="local_content_target_percentage" 
                                           widget="percentage"
                                           string="Target for Evaluation %"/>
                                    <field name="local_content_baseline_weight" 
                                           widget="percentage"
                                           string="Weight in Evaluation %"/>
                                    <field name="local_content_mechanism" 
                                           string="Calculation Mechanism"/>
                                </group>
                                
                                <group string="SME Benefits">
                                    <field name="sme_participation_allowed"/>
                                    <field name="sme_price_preference" 
                                           widget="percentage"
                                           invisible="not sme_participation_allowed"
                                           string="SME Price Preference %"/>
                                    <field name="sme_qualification_mandatory" 
                                           invisible="not sme_participation_allowed"
                                           string="SME Certificate Mandatory"/>
                                    
                                    <div invisible="not sme_participation_allowed" class="alert alert-success mt-2">
                                        <i class="fa fa-check-circle"/> <strong>SME Participation Allowed</strong><br/>
                                        Small &amp; Medium Enterprises can participate in this tender with special benefits.
                                    </div>
                                </group>
                            </group>
                            
                            <group invisible="not local_content_required">
                                <field name="local_content_notes" 
                                       widget="text" 
                                       placeholder="Additional notes about local content requirements..."
                                       nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter for Communication -->
                <chatter reload_on_post="True"/>

            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_etimad_tender_kanban" model="ir.ui.view">
        <field name="name">etimad.tender.kanban</field>
        <field name="model">ics.etimad.tender</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile o_etimad_kanban" default_group_by="etimad_tender_type">
                <header>
                    <button name="%(action_server_fetch_etimad_tenders)d" 
                            string="Fetch Latest" 
                            type="action" 
                            class="btn-primary"
                            icon="fa-refresh"/>
                    <button name="%(action_server_fetch_batch_etimad_tenders)d" 
                            string="Fetch Batch" 
                            type="action" 
                            class="btn-secondary"
                            icon="fa-refresh"/>
                </header>
                <field name="name"/>
                <field name="reference_number"/>
                <field name="agency_name"/>
                <field name="etimad_tender_type"/>
                <field name="activity_name"/>
                <field name="estimated_amount"/>
                <field name="estimated_value_category"/>
                <field name="document_cost_amount"/>
                <field name="remaining_days"/>
                <field name="offers_deadline"/>
                <field name="tender_status_text"/>
                <field name="is_participating"/>
                <field name="is_favorite"/>
                <field name="is_urgent"/>
                <field name="is_hot_tender"/>
                <field name="matching_score"/>
                <field name="opportunity_id"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" t-attf-class="{{record.is_hot_tender.raw_value ? 'border-info' : ''}} {{record.is_urgent.raw_value ? 'border-danger' : ''}}">
                            <!-- Header -->
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <t t-if="record.is_hot_tender.raw_value"><i class="fa fa-fire text-info"/> </t>
                                        <t t-if="record.is_urgent.raw_value"><i class="fa fa-exclamation-triangle text-danger"/> </t>
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <small><field name="reference_number"/></small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <field name="is_favorite" widget="boolean_favorite"/>
                                </div>
                            </div>
                            
                            <!-- Body -->
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-12">
                                        <i class="fa fa-building-o text-muted"/> <field name="agency_name"/>
                                    </div>
                                    <div class="col-12 mt-1" t-if="record.etimad_tender_type.raw_value">
                                        <i class="fa fa-tag text-muted"/> <field name="etimad_tender_type"/>
                                    </div>
                                    <div class="col-12 mt-1" t-if="record.activity_name.raw_value">
                                        <i class="fa fa-briefcase text-muted"/> <field name="activity_name"/>
                                    </div>
                                </div>
                                
                                <!-- Estimated Value -->
                                <div class="row mt-2" t-if="record.estimated_amount.raw_value">
                                    <div class="col-12">
                                        <span class="badge badge-pill" t-attf-class="badge-{{record.estimated_value_category.raw_value == 'mega' ? 'primary' : (record.estimated_value_category.raw_value == 'large' ? 'success' : (record.estimated_value_category.raw_value == 'medium' ? 'info' : 'secondary'))}}">
                                            <field name="estimated_amount" widget="monetary"/>
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Matching Score -->
                                <div class="row mt-2" t-if="record.matching_score.raw_value &gt; 0">
                                    <div class="col-12">
                                        <div class="progress" style="height: 15px;">
                                            <div class="progress-bar" role="progressbar" t-attf-style="width: {{record.matching_score.raw_value}}%" t-attf-class="bg-{{record.matching_score.raw_value &gt;= 70 ? 'success' : (record.matching_score.raw_value &gt;= 40 ? 'warning' : 'danger')}}">
                                                <small><t t-esc="Math.round(record.matching_score.raw_value)"/>% Match</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Links -->
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <t t-if="record.opportunity_id.raw_value">
                                            <span class="badge badge-info"><i class="fa fa-rocket"/> Opportunity</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Footer -->
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <span class="text-muted">
                                        <i class="fa fa-calendar-o"/> 
                                        <field name="offers_deadline" widget="date"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.remaining_days.raw_value &gt; 0" 
                                          class="badge badge-pill" 
                                          t-attf-class="badge-{{record.is_urgent.raw_value ? 'danger' : (record.remaining_days.raw_value &lt; 7 ? 'warning' : 'info')}}">
                                        <i class="fa fa-clock-o"/> <field name="remaining_days"/> days
                                    </span>
                                    <span t-if="record.remaining_days.raw_value == 0" class="badge badge-pill badge-dark">
                                        <i class="fa fa-clock-o"/> Due Today
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Quick Actions -->
                            <div class="o_kanban_record_bottom mt-1">
                                <button name="action_create_opportunity" 
                                        type="object" 
                                        class="btn btn-sm btn-primary" 
                                        t-if="!record.opportunity_id.raw_value">
                                    Create Opportunity
                                </button>
                                <button name="action_open_url" 
                                        type="object" 
                                        class="btn btn-sm btn-secondary ml-1">
                                    <i class="fa fa-external-link"/> Visit
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_etimad_tender_search" model="ir.ui.view">
        <field name="name">etimad.tender.search</field>
        <field name="model">ics.etimad.tender</field>
        <field name="arch" type="xml">
            <search string="Search Tenders">
                <field name="name" string="Tender Name"/>
                <field name="reference_number"/>
                <field name="agency_name"/>
                <field name="etimad_tender_type"/>
                <field name="activity_name"/>
                <field name="tender_number"/>
                
                <!-- Quick Filters -->
                <filter string="Favorites" name="favorites" domain="[('is_favorite', '=', True)]"/>
                <filter string="Hot Tenders" name="hot_tenders" domain="[('is_hot_tender', '=', True)]"/>
                <filter string="Urgent" name="urgent" domain="[('is_urgent', '=', True)]"/>
                
                <separator/>
                <filter string="With Opportunity" name="with_opportunity" domain="[('opportunity_id', '!=', False)]"/>
                <filter string="Without Opportunity" name="without_opportunity" domain="[('opportunity_id', '=', False)]"/>
                
                <separator/>
                <!-- Status Filters -->
                <filter string="Participating" name="filter_participating" domain="[('is_participating','=',True)]"/>
                <filter string="Approved (Etimad)" name="filter_approved" domain="[('tender_status_approved','=',True)]"/>
                <filter string="With Award Results" name="filter_awarded" domain="[('award_announced','=',True)]"/>
                <filter string="Local Content Required" name="filter_local_content" domain="[('local_content_required','=',True)]"/>
                <filter string="SME Allowed" name="filter_sme" domain="[('sme_participation_allowed','=',True)]"/>
                
                <separator/>
                <!-- Deadline Filters -->
                <filter string="Due Today" name="due_today" 
                        domain="[('remaining_days', '=', 0)]"/>
                <filter string="Due This Week" name="due_week" 
                        domain="[('remaining_days', '&lt;=', 7), ('remaining_days', '&gt;', 0)]"/>
                <filter string="Due Next 2 Weeks" name="due_two_weeks" 
                        domain="[('remaining_days', '&lt;=', 14), ('remaining_days', '&gt;', 0)]"/>
                <filter string="Due This Month" name="due_month" 
                        domain="[('remaining_days', '&lt;=', 30), ('remaining_days', '&gt;', 0)]"/>
                
                <separator/>
                <!-- Value Filters -->
                <filter string="Small Value (&lt;100K)" name="small_value" 
                        domain="[('estimated_value_category', '=', 'small')]"/>
                <filter string="Medium Value (100K-1M)" name="medium_value" 
                        domain="[('estimated_value_category', '=', 'medium')]"/>
                <filter string="Large Value (1M-10M)" name="large_value" 
                        domain="[('estimated_value_category', '=', 'large')]"/>
                <filter string="Mega Value (&gt;10M)" name="mega_value" 
                        domain="[('estimated_value_category', '=', 'mega')]"/>
                
                <separator/>
                <!-- Matching Filters -->
                <filter string="High Match Score (&gt;70%)" name="high_match" 
                        domain="[('matching_score', '&gt;=', 70)]"/>
                <filter string="Medium Match Score (40-70%)" name="medium_match" 
                        domain="[('matching_score', '&gt;=', 40), ('matching_score', '&lt;', 70)]"/>
                
                <separator/>
                <!-- Date Filters -->
                <filter string="Published Today" name="published_today" 
                        domain="[('published_at', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),                                 ('published_at', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <filter string="Published This Week" name="published_week" 
                        domain="[('published_at', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <!-- Scraping Status -->
                <filter string="Scraping Issues" name="scraping_issues" 
                        domain="[('scraping_status', 'in', ['failed', 'partial'])]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Agency" name="group_agency" context="{'group_by': 'agency_name'}"/>
                    <filter string="Etimad Type" name="group_type" context="{'group_by': 'etimad_tender_type'}"/>
                    <filter string="Activity" name="group_activity" context="{'group_by': 'activity_name'}"/>
                    <filter string="Participating" name="group_participating" context="{'group_by': 'is_participating'}"/>
                    <filter string="Value Category" name="group_value" context="{'group_by': 'estimated_value_category'}"/>
                    <filter string="Published Date" name="group_published" context="{'group_by': 'published_at:month'}"/>
                    <filter string="Deadline" name="group_deadline" context="{'group_by': 'offers_deadline:week'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_etimad_tenders" model="ir.actions.act_window">
        <field name="name">Etimad Tenders</field>
        <field name="res_model">ics.etimad.tender</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_etimad_tender_search"/>
        <field name="context">{
            'search_default_without_opportunity': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tenders found. Let's fetch some from Etimad!
            </p>
            <p>
                Click the <b>Fetch Etimad Tenders</b> button in the action menu to sync tenders from the Etimad platform.
            </p>
        </field>
    </record>

