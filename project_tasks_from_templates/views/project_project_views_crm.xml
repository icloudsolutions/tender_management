<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Extend project.project form view to show CRM link -->
    <record id="project_project_view_form_inherit_crm_link" model="ir.ui.view">
        <field name="name">project.project.view.form.inherit.crm.link</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="crm_lead_id" 
                       invisible="crm_lead_id == False"
                       readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
