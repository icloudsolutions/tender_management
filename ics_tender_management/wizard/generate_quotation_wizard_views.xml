<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_generate_quotation_wizard_form" model="ir.ui.view">
            <field name="name">ics.tender.quotation.wizard.form</field>
            <field name="model">ics.tender.quotation.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Sales Quotation">
                    <sheet>
                        <group>
                            <group>
                                <field name="tender_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="margin_percentage" widget="percentage"/>
                                <field name="use_vendor_costs"/>
                                <field name="pricelist_id"/>
                                <field name="payment_term_id"/>
                                <field name="validity_date"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <label for="total_cost" string="Total Cost"/>
                                <div class="o_row">
                                    <field name="total_cost" widget="monetary" readonly="1"/>
                                </div>
                                <label for="total_margin" string="Total Margin"/>
                                <div class="o_row">
                                    <field name="total_margin" widget="monetary" readonly="1"/>
                                </div>
                                <label for="total_amount" string="Total Quotation Amount" class="fw-bold"/>
                                <div class="o_row">
                                    <field name="total_amount" widget="monetary" readonly="1" class="fw-bold"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Quotation Preview" name="preview">
                                <field name="line_preview_ids">
                                    <list>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="cost" sum="Total Cost"/>
                                        <field name="margin" sum="Total Margin"/>
                                        <field name="unit_price"/>
                                        <field name="total" sum="Total Amount"/>
                                        <field name="currency_id" invisible="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Terms and Conditions" name="notes">
                                <field name="notes" placeholder="Enter terms and conditions..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_generate_quotation" string="Generate Quotation" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
