<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_create_project_wizard_form" model="ir.ui.view">
            <field name="name">ics.tender.project.wizard.form</field>
            <field name="model">ics.tender.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Project">
                    <sheet>
                        <group>
                            <group>
                                <field name="tender_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="name"/>
                                <field name="user_id" widget="many2one_avatar_user"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="sale_order_id"/>
                                <field name="create_from_sale_order"/>
                            </group>
                        </group>
                        <group string="Task Creation Method">
                            <field name="use_task_template" widget="boolean_toggle"/>
                            <field name="task_template_id" invisible="not use_task_template" 
                                options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_from_boq" invisible="use_task_template" widget="boolean_toggle"/>
                        </group>
                        <group string="Project Configuration">
                            <div class="alert alert-info" role="alert" invisible="not use_task_template">
                                <strong>Task Template Mode:</strong>
                                <p class="mb-0">
                                    A project will be created with predefined tasks from the selected template.
                                    These tasks are based on your documented procedures (PDF).
                                </p>
                            </div>
                            <div class="alert alert-info" role="alert" invisible="use_task_template">
                                <strong>BoQ Mode:</strong>
                                <p class="mb-0">
                                    Each Bill of Quantities line will be converted into a project task.
                                </p>
                            </div>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_project" string="Create Project" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
