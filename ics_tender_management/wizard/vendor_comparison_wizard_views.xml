<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_vendor_comparison_wizard_form" model="ir.ui.view">
            <field name="name">ics.tender.vendor.comparison.wizard.form</field>
            <field name="model">ics.tender.vendor.comparison.wizard</field>
            <field name="arch" type="xml">
                <form string="Compare Vendor Offers">
                    <sheet>
                        <div class="alert alert-info" role="alert" invisible="tender_type != 'single_vendor'">
                            <strong>Single Vendor Mode:</strong> You must select ONE vendor for ALL products.
                            The system will use this vendor's offers for all items.
                        </div>
                        <div class="alert alert-success" role="alert" invisible="tender_type != 'product_wise'">
                            <strong>Product-wise Mode:</strong> You can select different vendors for each product.
                            The system will automatically select the best offer per product.
                        </div>
                        <group>
                            <field name="tender_id" readonly="1"/>
                            <field name="tender_type" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group invisible="tender_type != 'single_vendor'">
                            <group>
                                <field name="available_vendor_ids" invisible="1"/>
                                <label for="single_vendor_id" string="Select Vendor"/>
                                <div class="o_row">
                                    <field name="single_vendor_id"
                                        options="{'no_create': True, 'no_create_edit': True}"
                                        placeholder="Choose a vendor..."/>
                                    <button name="action_select_best_common_vendor"
                                        type="object"
                                        string="Auto-Select Best"
                                        class="btn-link"
                                        icon="fa-magic"
                                        help="Automatically select the vendor with the lowest total price"/>
                                </div>
                            </group>
                        </group>
                        <group>
                            <group>
                                <label for="total_best_price" string="Total Best Price"/>
                                <div class="o_row">
                                    <field name="total_best_price" widget="monetary" readonly="1"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Vendor Comparison" name="comparison">
                                <field name="line_ids" nolabel="1">
                                    <list decoration-success="savings > 0" decoration-danger="savings &lt; 0"
                                          create="false" delete="false">
                                        <field name="boq_line_id" invisible="1"/>
                                        <field name="product_id" readonly="1"/>
                                        <field name="quantity" readonly="1"/>
                                        <field name="uom_id" readonly="1"/>
                                        <field name="estimated_cost" sum="Total Estimated" readonly="1"/>
                                        <field name="best_vendor_id" 
                                            readonly="parent.tender_type == 'single_vendor'"
                                            options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field name="best_offer_unit_price" readonly="1"/>
                                        <field name="best_offer_total" sum="Total Best Offers" readonly="1"/>
                                        <field name="offer_count" readonly="1"/>
                                        <field name="savings" sum="Total Savings" readonly="1"/>
                                        <field name="savings_percentage" string="Savings %" readonly="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="available_vendor_ids" invisible="1"/>
                                        <button name="action_view_offers" type="object"
                                            string="View All Offers" icon="fa-eye" 
                                            title="View all vendor offers for this product"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_apply_selection"
                            string="Apply Selected Vendor"
                            type="object"
                            class="btn-primary"
                            invisible="tender_type != 'single_vendor'"/>
                        <button name="action_apply_selection"
                            string="Apply Best Vendors per Product"
                            type="object"
                            class="btn-primary"
                            invisible="tender_type != 'product_wise'"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
