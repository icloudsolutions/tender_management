<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_decline_tender_wizard_form" model="ir.ui.view">
            <field name="name">ics.tender.decline.wizard.form</field>
            <field name="model">ics.tender.decline.wizard</field>
            <field name="arch" type="xml">
                <form string="Decline Tender">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <i class="fa fa-ban text-warning"/> Not Participating
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="tender_name"/>
                                <field name="tender_title"/>
                                <field name="tender_state" widget="badge"
                                    decoration-warning="tender_state in ['technical', 'financial']"
                                    decoration-info="tender_state == 'draft'"/>
                            </group>
                        </group>

                        <div class="alert alert-warning" role="alert">
                            <strong><i class="fa fa-exclamation-triangle"/> Confirm Decision:</strong>
                            <p class="mb-0">
                                You are about to decline participation in this tender.
                                The tender will be <strong>cancelled</strong> and the workflow will end.
                                Please provide a detailed reason below.
                            </p>
                        </div>

                        <group>
                            <field name="non_participation_reason"
                                placeholder="Enter the reason for not participating in this tender..."
                                nolabel="1" required="1"/>
                        </group>

                    </sheet>
                    <footer>
                        <button name="action_confirm_decline" string="Confirm - Not Participating"
                            type="object" class="btn-warning"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
