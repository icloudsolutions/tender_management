<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ========== SUPPLY PROJECT TEMPLATE ========== -->
        <record id="task_template_supply" model="ics.project.task.template">
            <field name="name">Supply Project Template (توريد)</field>
            <field name="tender_category">supply</field>
            <field name="sequence">10</field>
        </record>

        <!-- Supply Project Tasks -->
        <record id="task_template_supply_line_1" model="ics.project.task.template.line">
            <field name="template_id" ref="task_template_supply"/>
            <field name="sequence">10</field>
            <field name="name">بدء المشروع ( Kick-Off )</field>
            <field name="description"><![CDATA[
                <ul>
                    <li>اجتماع بدء المشروع مع العميل</li>
                    <li>مراجعة متطلبات المشروع</li>
                    <li>تحديد نقاط الاتصال</li>
                    <li>وضع الجدول الزمني</li>
                </ul>
            ]]></field>
            <field name="planned_hours">8</field>
            <field name="priority">3</field>
            <field name="delay_days">0</field>
        </record>

        <record id="task_template_supply_line_2" model="ics.project.task.template.line">
            <field name="template_id" ref="task_template_supply"/>
            <field name="sequence">20</field>
            <field name="name">التخطيط التشغيلي</field>
            <field name="description"><![CDATA[
                <ul>
                    <li>وضع خطة التوريد</li>
                    <li>تحديد الموردين المعتمدين</li>
                    <li>إعداد جدول التسليم</li>
                    <li>تخطيط الموارد والمخزون</li>
                </ul>
            ]]></field>
            <field name="planned_hours">16</field>
            <field name="priority">2</field>
            <field name="delay_days">1</field>
        </record>

        <record id="task_template_supply_line_3" model="ics.project.task.template.line">
            <field name="template_id" ref="task_template_supply"/>
            <field name="sequence">30</field>
            <field name="name">تنفيذ الأعمال وفق كراسة الشروط والمواصفات المعتمدة</field>
            <field name="description"><![CDATA[
                <ul>
                    <li>طلب عروض أسعار من الموردين</li>
                    <li>مراجعة العروض والمطابقة</li>
                    <li>إصدار أوامر الشراء</li>
                    <li>متابعة التصنيع/التجهيز</li>
                    <li>فحص الجودة</li>
                </ul>
            ]]></field>
            <field name="planned_hours">80</field>
            <field name="priority">3</field>
            <field name="delay_days">7</field>
        </record>

        <record id="task_template_supply_line_4" model="ics.project.task.template.line">
