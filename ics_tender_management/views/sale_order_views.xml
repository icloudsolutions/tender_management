<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_order_form_inherit_tender" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.tender</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tender" type="object"
                        class="oe_stat_button" icon="fa-gavel"
                        invisible="tender_id == False">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">View Tender</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="tender_id" options="{'no_create': True}"
                        readonly="state != 'draft'"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
