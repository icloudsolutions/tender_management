<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_crm_lead_form_inherit_tender" model="ir.ui.view">
            <field name="name">crm.lead.form.inherit.tender</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <!-- Hidden control fields -->
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="is_from_etimad" invisible="1"/>
                    <field name="active_tender_id" invisible="1"/>
                </xpath>
                
                <!-- Warning Banner for Tender-Controlled Opportunities -->
                <xpath expr="//sheet" position="before">
                    <div class="alert alert-warning" role="alert" invisible="not active_tender_id">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-lock fa-2x me-3"/>
                            <div class="flex-grow-1">
                                <strong><i class="fa fa-briefcase"/> This opportunity is controlled by Tender Management</strong>
                                <p class="mb-0">
                                    This opportunity is linked to an active tender and cannot be edited directly.
                                    All changes must be made through the tender form to maintain data consistency.
                                </p>
                                <p class="mb-0 mt-2">
                                    <strong>Linked Tender:</strong> <field name="active_tender_id" readonly="1" nolabel="1" 
                                        class="oe_inline" options="{'no_open': False}"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </xpath>
                
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_tenders" type="object"
                        class="oe_stat_button" icon="fa-gavel"
                        invisible="tender_count == 0">
                        <field name="tender_count" widget="statinfo" string="Tenders"/>
                    </button>
                </xpath>
                
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="etimad_tender_id" invisible="type == 'lead'" readonly="active_tender_id"/>
                </xpath>
                
                <xpath expr="//header" position="inside">
                    <button name="action_create_tender" string="Create Tender"
                        type="object" class="btn-primary"
                        invisible="type == 'lead' or tender_count > 0"/>
                </xpath>
                
                <!-- Make key fields readonly when controlled by tender -->
                <xpath expr="//field[@name='stage_id']" position="attributes">
                    <attribute name="readonly">active_tender_id</attribute>
                </xpath>
                <xpath expr="//field[@name='probability']" position="attributes">
                    <attribute name="readonly">active_tender_id</attribute>
                </xpath>
                <xpath expr="//field[@name='expected_revenue']" position="attributes">
                    <attribute name="readonly">active_tender_id</attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="readonly">active_tender_id</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
