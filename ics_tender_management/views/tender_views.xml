<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tender_list" model="ir.ui.view">
            <field name="name">ics.tender.list</field>
            <field name="model">ics.tender</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Tenders" decoration-danger="is_urgent" decoration-success="state=='won'" decoration-muted="state in ['lost','cancelled']">
                    <field name="is_favorite" widget="boolean_toggle" optional="show"/>
                    <field name="name"/>
                    <field name="tender_number"/>
                    <field name="tender_title"/>
                    <field name="partner_id"/>
                    <field name="tender_category"/>
                    <field name="submission_deadline"/>
                    <field name="days_to_deadline" optional="show"/>
                    <field name="is_urgent" invisible="1"/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="total_quotation_amount" sum="Total"/>
                    <field name="stage_id" optional="show"/>
                    <field name="state" widget="badge"
                        decoration-success="state=='won'"
                        decoration-info="state in ['submitted','evaluation']"
                        decoration-warning="state in ['technical','financial']"
                        decoration-danger="state=='lost'"/>
                    <field name="priority" widget="priority" optional="show"/>
                    <field name="activity_ids" widget="list_activity"/>
                </list>
            </field>
        </record>

        <record id="view_tender_kanban" model="ir.ui.view">
            <field name="name">ics.tender.kanban</field>
            <field name="model">ics.tender</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column" sample="1">
                    <field name="stage_id"/>
                    <field name="color"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="submission_deadline"/>
                    <field name="days_to_deadline"/>
                    <field name="is_urgent"/>
                    <field name="total_quotation_amount"/>
                    <field name="activity_ids"/>
                    <field name="activity_state"/>
                    <progressbar field="state" colors='{"won": "success", "lost": "danger", "submitted": "info"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''} oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="tender_title"/>
                                            </span>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        <div t-if="record.partner_id.value">
                                            <i class="fa fa-building-o"/> <field name="partner_id"/>
                                        </div>
                                        <div t-if="record.submission_deadline.value">
                                            <i class="fa fa-calendar"/> <field name="submission_deadline" widget="date"/>
                                            <t t-if="record.is_urgent.raw_value">
                                                <span class="badge badge-danger ms-2">Urgent!</span>
                                            </t>
                                        </div>
                                        <div t-if="record.total_quotation_amount.value">
                                            <i class="fa fa-money"/> <field name="total_quotation_amount" widget="monetary"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority"/>
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_tender_form" model="ir.ui.view">
            <field name="name">ics.tender.form</field>
            <field name="model">ics.tender</field>
            <field name="arch" type="xml">
                <form string="Tender">
                    <header>
                        <button name="action_start_technical_study" string="Start Technical Study"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                        <button name="action_start_financial_study" string="Start Financial Study"
                            type="object" class="oe_highlight"
                            invisible="state != 'technical'"/>
                        <button name="action_create_purchase_agreement" string="Create RFQ (Purchase Agreement)"
                            type="object" class="oe_highlight"
                            invisible="state not in ['financial', 'quotation']"/>
                        <button name="action_compare_vendors" string="Compare Vendors"
                            type="object"
                            invisible="state not in ['financial', 'quotation']"/>
                        <button name="action_create_purchase_orders" string="Create Purchase Order(s)"
                            type="object" class="btn-primary"
                            invisible="state not in ['financial', 'quotation']"
                            help="Single Vendor: Creates 1 PO. Product-wise: Creates multiple POs per vendor"/>
                        <button name="action_prepare_quotation" string="Prepare Quotation"
                            type="object" class="oe_highlight"
                            invisible="state != 'financial'"/>
                        <button name="action_generate_quotation" string="Generate Sales Quotation"
                            type="object" class="oe_highlight"
                            invisible="state != 'quotation'"/>
                        <button name="action_submit_tender" string="Submit Tender"
                            type="object" class="oe_highlight"
                            invisible="state != 'quotation'"/>
                        <button name="action_mark_won" string="Mark as Won"
                            type="object" class="oe_highlight"
                            invisible="state not in ['submitted', 'evaluation']"/>
                        <button name="action_mark_lost" string="Mark as Lost"
                            type="object"
                            invisible="state not in ['submitted', 'evaluation']"/>
                        <button name="action_decline_tender" string="Not Participating"
                            type="object" class="btn-secondary"
                            invisible="state not in ['draft', 'technical', 'financial']"
                            help="Decline participation and cancel this tender"/>
                        <button name="action_create_project" string="Create Project"
                            type="object" class="oe_highlight"
                            invisible="state != 'won' or project_count > 0"/>
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,technical,financial,quotation,submitted,evaluation,won"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_favorite" type="object"
                                class="oe_stat_button" 
                                icon="fa-star-o"
                                invisible="is_favorite"
                                title="Mark as Favorite">
                                <span>Favorite</span>
                            </button>
                            <button name="toggle_favorite" type="object"
                                class="oe_stat_button" 
                                icon="fa-star"
                                invisible="not is_favorite"
                                title="Remove from Favorites">
                                <span>Favorite</span>
                            </button>
                            <button name="action_view_boq_lines" type="object"
                                class="oe_stat_button" icon="fa-list-ol">
                                <field name="boq_count" widget="statinfo" string="BoQ Lines"/>
                            </button>
                            <button name="action_view_purchase_agreements" type="object"
                                class="oe_stat_button" icon="fa-shopping-cart">
                                <field name="requisition_count" widget="statinfo" string="RFQs"/>
                            </button>
                            <button name="action_view_quotations" type="object"
                                class="oe_stat_button" icon="fa-file-text-o">
                                <field name="quotation_count" widget="statinfo" string="Quotations"/>
                            </button>
                            <button name="action_view_projects" type="object"
                                class="oe_stat_button" icon="fa-tasks"
                                invisible="project_count == 0">
                                <field name="project_count" widget="statinfo" string="Projects"/>
                            </button>
                            <button name="action_view_attachments" type="object"
                                class="oe_stat_button" icon="fa-paperclip">
                                <field name="attachment_count" widget="statinfo" string="Documents"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Won" bg_color="bg-success"
                            invisible="state != 'won'"/>
                        <widget name="web_ribbon" title="Lost" bg_color="bg-danger"
                            invisible="state != 'lost'"/>
                        <widget name="web_ribbon" title="Urgent" bg_color="bg-warning"
                            invisible="not is_urgent"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <div class="alert alert-info" role="alert" invisible="partner_id">
                            <strong><i class="fa fa-info-circle"/> Customer Required</strong><br/>
                            Please set a <strong>Customer</strong> below. The customer is required for generating quotations and submitting the tender.
                        </div>
                        <group>
                            <group name="tender_info">
                                <field name="tender_number"/>
                                <field name="tender_title"/>
                                <field name="tender_category"/>
                                <field name="tender_type" widget="radio"
                                    options="{'horizontal': true}"
                                    readonly="state not in ['draft', 'technical', 'financial']"/>
                                <field name="etimad_tender_id" options="{'no_create': True}"/>
                                <field name="lead_id" options="{'no_create': True}"/>
                                <field name="partner_id" options="{'no_create_edit': True}" required="1"/>
                            </group>
                            <group name="tender_management">
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="team_id"/>
                                <field name="stage_id" options="{'no_create': True}"/>
                                <field name="priority" widget="priority"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <group name="dates">
                                <field name="announcement_date"/>
                                <field name="submission_deadline" widget="datetime"/>
                                <field name="days_to_deadline"/>
                                <field name="opening_date" widget="datetime"/>
                                <field name="is_urgent" invisible="1"/>
                            </group>
                            <group name="financial" invisible="state == 'draft'">
                                <field name="expected_revenue" help="القيمة التقديرية"/>
                                <field name="total_estimated_cost" widget="monetary" 
                                    invisible="state in ['draft', 'technical']"/>
                                <field name="total_vendor_cost" widget="monetary"
                                    invisible="state in ['draft', 'technical']"/>
                                <label for="margin_percentage" string="Margin %"
                                    invisible="state in ['draft', 'technical']"/>
                                <div class="o_row" invisible="state in ['draft', 'technical']">
                                    <field name="margin_percentage" class="oe_inline"/>
                                    <span>%</span>
                                </div>
                                <field name="margin_amount" widget="monetary"
                                    invisible="state in ['draft', 'technical']"/>
                                <field name="total_quotation_amount" widget="monetary" 
                                    class="oe_subtotal_footer_separator"
                                    invisible="state in ['draft', 'technical']"/>
                            </group>
                        </group>
                        <notebook>
                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 1: Tender Information - Always visible         -->
                            <!-- Basic info from Etimad + description               -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="1. Tender Information" name="tender_info_tab">
                                <group>
                                    <group string="Description &amp; Scope">
                                        <field name="description" placeholder="Tender description and requirements..." nolabel="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Source &amp; Method">
                                        <field name="etimad_link" widget="url" string="Etimad Link"/>
                                        <field name="external_source" readonly="1" invisible="not etimad_tender_id"/>
                                        <field name="tender_submission_method" string="Submission Method"/>
                                        <field name="tender_completion_time" string="Completion Time"/>
                                    </group>
                                    <group string="Financial Overview">
                                        <field name="expected_revenue" string="Estimated Value" help="القيمة التقديرية"/>
                                        <field name="tender_booklet_price" string="Document Cost" help="قيمة وثائق المنافسة"/>
                                    </group>
                                </group>
                                <!-- Etimad Portal Details (only when linked to Etimad) -->
                                <separator string="Etimad Portal Information" invisible="not etimad_tender_id"/>
                                <group invisible="not etimad_tender_id">
                                    <group string="Etimad Identifiers">
                                        <field name="etimad_tender_id_integer" readonly="1"/>
                                        <field name="etimad_tender_id_string" readonly="1"/>
                                        <field name="etimad_reference_number" readonly="1"/>
                                        <field name="etimad_tender_status_id" readonly="1"/>
                                    </group>
                                    <group string="Agency Information">
                                        <field name="etimad_agency_name" readonly="1"/>
                                        <field name="etimad_branch_name" readonly="1"/>
                                    </group>
                                </group>
                                <group invisible="not etimad_tender_id">
                                    <group string="Tender Activity">
                                        <field name="etimad_activity_name" readonly="1"/>
                                        <field name="etimad_activity_id" readonly="1"/>
                                    </group>
                                    <group string="Etimad Dates">
                                        <field name="etimad_published_at" widget="datetime" readonly="1"/>
                                        <field name="etimad_last_enquiry_date_hijri" readonly="1"/>
                                        <field name="etimad_last_offer_date_hijri" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 2: Qualification & Decision                    -->
                            <!-- Draft + Technical: booklet, site visit, inquiries, -->
                            <!-- evaluation, participation decision, scope          -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="2. Qualification &amp; Decision" name="qualification"
                                invisible="state in ['won', 'lost', 'cancelled']">
                                <!-- Step 1: Buy the tender booklet -->
                                <group>
                                    <group string="Booklet Purchase">
                                        <field name="document_purchase_date" string="Purchase Date"/>
                                        <field name="booklet_purchased" widget="boolean_toggle"/>
                                        <field name="booklet_purchase_receipt" invisible="not booklet_purchased"
                                            string="Receipt"/>
                                        <field name="booklet_purchase_request_date" invisible="not booklet_purchased"
                                            string="Request Date"/>
                                        <field name="booklet_purchase_date" invisible="not booklet_purchased"
                                            string="Confirmed Date"/>
                                    </group>
                                    <group string="Inquiries">
                                        <field name="last_inquiry_date" string="Last Inquiry Date"/>
                                        <field name="required_inquiries" string="Required Inquiries"/>
                                    </group>
                                </group>
                                <!-- Step 2: Site visit if required -->
                                <group>
                                    <group string="Site Visit">
                                        <field name="site_visit_required" widget="boolean_toggle"/>
                                        <field name="site_visit_date" widget="datetime" invisible="not site_visit_required"/>
                                        <field name="documents_required_for_site" filename="documents_required_filename" invisible="not site_visit_required"/>
                                        <field name="documents_required_filename" invisible="1"/>
                                    </group>
                                    <group string="Evaluation Criteria">
                                        <field name="presales_employee" widget="many2one_avatar_user" string="Presales Engineer"/>
                                        <field name="evaluation_criteria_file" filename="evaluation_criteria_filename" string="Criteria File"/>
                                        <field name="evaluation_criteria_filename" invisible="1"/>
                                        <field name="required_certifications_file" filename="required_certifications_filename" string="Required Certifications"/>
                                        <field name="required_certifications_filename" invisible="1"/>
                                        <field name="estimated_project_value" string="Estimated Project Value"/>
                                    </group>
                                </group>
                                <!-- Step 3: Go/No-Go decision -->
                                <separator string="Participation Decision"/>
                                <group>
                                    <group>
                                        <field name="winning_probability" string="Win Probability (%)"/>
                                        <field name="client_relationship" string="Client Relationship"/>
                                        <field name="participation_decision" widget="boolean_toggle" string="Participate?"/>
                                        <field name="non_participation_reason" invisible="participation_decision" string="Reason for Not Participating"/>
                                    </group>
                                    <group>
                                        <field name="challenges" string="Challenges &amp; Risks"/>
                                    </group>
                                </group>
                                <separator string="Project Scope of Work"/>
                                <field name="project_scope_of_work" placeholder="Detailed project scope of work..."/>
                            </page>

                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 3: Team & Suppliers                            -->
                            <!-- Technical study: assign team, identify suppliers    -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="3. Team &amp; Suppliers" name="team_suppliers"
                                invisible="state in ['draft', 'won', 'lost', 'cancelled']">
                                <group>
                                    <group string="Responsible Team">
                                        <field name="tender_employee" widget="many2one_avatar_user" string="Tender Manager"/>
                                        <field name="sales_representative" widget="many2one_avatar_user" string="Sales Representative"/>
                                    </group>
                                    <group string="Selected Suppliers">
                                        <field name="selected_suppliers_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                                    </group>
                                </group>
                                <separator string="Tender Communication Team"/>
                                <field name="tender_team_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="employee_id" widget="many2one_avatar_user"/>
                                        <field name="role"/>
                                        <field name="contact_info"/>
                                        <field name="phone"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                                <separator string="Potential Suppliers"/>
                                <field name="potential_suppliers_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="partner_id" options="{'no_create_edit': True}"/>
                                        <field name="scope_of_work"/>
                                        <field name="evaluation_score"/>
                                        <field name="status"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="city"/>
                                        <field name="currency_id" invisible="1"/>
                                    </list>
                                </field>
                            </page>

                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 4: Bill of Quantities                          -->
                            <!-- Technical/Financial: pricing and vendor selection   -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="4. Bill of Quantities" name="boq"
                                invisible="state in ['draft', 'won', 'lost', 'cancelled']">
                                <field name="boq_line_ids">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="estimated_cost" sum="Total Estimated"/>
                                        <field name="selected_vendor_id"/>
                                        <field name="selected_vendor_price" sum="Total Vendor Cost"/>
                                        <field name="currency_id" invisible="1"/>
                                    </list>
                                </field>
                            </page>

                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 5: Approvals & Documents                       -->
                            <!-- Financial/Quotation: approvals before submission    -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="5. Approvals &amp; Documents" name="approvals"
                                invisible="state in ['draft', 'technical', 'won', 'lost', 'cancelled']">
                                <div class="alert alert-info" role="alert" invisible="not require_direct_manager and not require_department_manager and not require_financial_manager and not require_ceo">
                                    <strong><i class="fa fa-info-circle"/> Approval Requirements:</strong>
                                    <p class="mb-0">
                                        Based on tender category and amount, the following approvals are required:
                                    </p>
                                    <ul class="mb-0">
                                        <li invisible="not require_direct_manager"><i class="fa fa-check"/> Direct Manager Approval Required</li>
                                        <li invisible="not require_department_manager"><i class="fa fa-check"/> Department Manager Approval Required</li>
                                        <li invisible="not require_financial_manager"><i class="fa fa-check"/> Financial Manager Approval Required</li>
                                        <li invisible="not require_ceo"><i class="fa fa-check"/> CEO Approval Required</li>
                                    </ul>
                                </div>
                                <group>
                                    <group string="Management Approvals">
                                        <field name="approval_direct_manager" widget="boolean_toggle" 
                                            invisible="not require_direct_manager"
                                            required="require_direct_manager"/>
                                        <field name="approval_department_manager" widget="boolean_toggle"
                                            invisible="not require_department_manager"
                                            required="require_department_manager"/>
                                        <field name="approval_financial_manager" widget="boolean_toggle"
                                            invisible="not require_financial_manager"
                                            required="require_financial_manager"/>
                                        <field name="approval_ceo" widget="boolean_toggle"
                                            invisible="not require_ceo"
                                            required="require_ceo"/>
                                    </group>
                                    <group string="Document Submission">
                                        <field name="tender_documents_uploaded" widget="boolean_toggle"/>
                                        <field name="file_submission_required" widget="boolean_toggle"/>
                                        <field name="file_submission_date" invisible="not file_submission_required"/>
                                        <field name="documents_upload_for_review" filename="documents_upload_filename"/>
                                        <field name="documents_upload_filename" invisible="1"/>
                                    </group>
                                </group>
                            </page>

                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 6: Offer Results & Evaluation                  -->
                            <!-- Submitted/Evaluation: track offer outcomes         -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="6. Offer Results &amp; Evaluation" name="offer_results"
                                invisible="state in ['draft', 'technical', 'financial', 'quotation', 'won', 'lost', 'cancelled']">
                                <group>
                                    <group string="Offer Opening Dates">
                                        <field name="offer_opening_date" widget="datetime"/>
                                        <field name="financial_offer_opening_date" widget="datetime"/>
                                        <field name="competing_companies_file" filename="competing_companies_filename"/>
                                        <field name="competing_companies_filename" invisible="1"/>
                                    </group>
                                    <group string="Technical Offer Status">
                                        <field name="offer_accepted" widget="boolean_toggle"/>
                                        <field name="offer_rejection_reason" invisible="offer_accepted"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Financial Offer Status">
                                        <field name="financial_offer_accepted" widget="boolean_toggle"/>
                                        <field name="financial_offer_rejection_reason" invisible="financial_offer_accepted"/>
                                    </group>
                                    <group string="Extensions &amp; Negotiations">
                                        <field name="offer_extension_requested" widget="boolean_toggle"/>
                                        <field name="extension_awarded" widget="boolean_toggle" invisible="not offer_extension_requested"/>
                                        <field name="extension_rejection_reason" invisible="extension_awarded or not offer_extension_requested"/>
                                        <field name="discount_requested" widget="boolean_toggle"/>
                                    </group>
                                </group>
                            </page>

                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 7: Final Outcome                               -->
                            <!-- Won/Lost/Cancelled: award, loss reason, appeal     -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="7. Final Outcome" name="outcome"
                                invisible="state not in ['won', 'lost', 'cancelled']">
                                <group string="Award Details" invisible="state != 'won'">
                                    <group>
                                        <field name="awarded_company" options="{'no_create_edit': True}"/>
                                        <field name="amount_awarded"/>
                                        <field name="award_date"/>
                                        <field name="award_letter_file" filename="award_letter_filename"/>
                                        <field name="award_letter_filename" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="winning_reason"/>
                                        <field name="actual_revenue"/>
                                    </group>
                                </group>

                                <separator string="Lost Reason" invisible="state != 'lost'"/>
                                <group invisible="state != 'lost'">
                                    <group>
                                        <field name="lost_reason" nolabel="1"/>
                                    </group>
                                </group>

                                <group string="Appeal Workflow" invisible="state != 'lost'">
                                    <group>
                                        <field name="appeal_submitted" widget="boolean_toggle"/>
                                        <field name="appeal_submission_date" invisible="not appeal_submitted"/>
                                        <field name="appeal_letter_file" filename="appeal_letter_filename" invisible="not appeal_submitted"/>
                                        <field name="appeal_letter_filename" invisible="1"/>
                                        <field name="appeal_reason" invisible="not appeal_submitted"/>
                                    </group>
                                    <group invisible="not appeal_submitted">
                                        <field name="appeal_status" widget="badge" 
                                            decoration-info="appeal_status == 'pending'"
                                            decoration-success="appeal_status == 'accepted'"
                                            decoration-danger="appeal_status == 'rejected'"
                                            decoration-muted="appeal_status == 'withdrawn'"/>
                                        <field name="appeal_response_date"/>
                                        <field name="appeal_response_notes"/>
                                    </group>
                                </group>
                                <div class="alert alert-info" role="alert" invisible="state != 'lost' or appeal_submitted">
                                    <p class="mb-0">
                                        You have the right to appeal the tender result.
                                        Click the checkbox above to start the appeal process.
                                    </p>
                                </div>
                            </page>

                            <!-- ═══════════════════════════════════════════════════ -->
                            <!-- Tab 8: Internal Notes - Always visible             -->
                            <!-- ═══════════════════════════════════════════════════ -->
                            <page string="8. Internal Notes" name="notes">
                                <field name="notes" placeholder="Internal notes, communications, and observations..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/> 
                </form>
            </field>
        </record>

        <record id="view_tender_search" model="ir.ui.view">
            <field name="name">ics.tender.search</field>
            <field name="model">ics.tender</field>
            <field name="arch" type="xml">
                <search string="Search Tenders">
                    <field name="name" string="Tender" filter_domain="['|','|',('name','ilike',self),('tender_number','ilike',self),('tender_title','ilike',self)]"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="team_id"/>
                    <field name="tag_ids"/>
                    <filter string="My Tenders" name="my_tenders" domain="[('user_id','=',uid)]"/>
                    <separator/>
                    <filter string="Urgent" name="urgent" domain="[('is_urgent','=',True)]"/>
                    <filter string="High Priority" name="high_priority" domain="[('priority','in',['2','3'])]"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Technical Study" name="technical" domain="[('state','=','technical')]"/>
                    <filter string="Financial Study" name="financial" domain="[('state','=','financial')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state','=','submitted')]"/>
                    <filter string="Won" name="won" domain="[('state','=','won')]"/>
                    <filter string="Lost" name="lost" domain="[('state','=','lost')]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active','=',True)]"/>
                    <filter string="Archived" name="archived" domain="[('active','=',False)]"/>
                    <separator/>
                    <filter string="Submission Date" name="submission_date" date="submission_deadline"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Responsible" name="group_user" context="{'group_by':'user_id'}"/>
                        <filter string="Sales Team" name="group_team" context="{'group_by':'team_id'}"/>
                        <filter string="Stage" name="group_stage" context="{'group_by':'stage_id'}"/>
                        <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                        <filter string="Category" name="group_category" context="{'group_by':'tender_category'}"/>
                        <filter string="Submission Month" name="group_submission_month" context="{'group_by':'submission_deadline:month'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>
