<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tender_tree" model="ir.ui.view">
            <field name="name">ics.tender.tree</field>
            <field name="model">ics.tender</field>
            <field name="arch" type="xml">
                <tree string="Tenders" decoration-danger="is_urgent" decoration-success="state=='won'" decoration-muted="state in ['lost','cancelled']">
                    <field name="name"/>
                    <field name="tender_number"/>
                    <field name="tender_title"/>
                    <field name="partner_id"/>
                    <field name="tender_category"/>
                    <field name="submission_deadline"/>
                    <field name="days_to_deadline" optional="show"/>
                    <field name="is_urgent" invisible="1"/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="total_quotation_amount" sum="Total"/>
                    <field name="stage_id" optional="show"/>
                    <field name="state" widget="badge"
                        decoration-success="state=='won'"
                        decoration-info="state in ['submitted','evaluation']"
                        decoration-warning="state in ['technical','financial']"
                        decoration-danger="state=='lost'"/>
                    <field name="priority" widget="priority" optional="show"/>
                    <field name="activity_ids" widget="list_activity"/>
                </tree>
            </field>
        </record>

        <record id="view_tender_kanban" model="ir.ui.view">
            <field name="name">ics.tender.kanban</field>
            <field name="model">ics.tender</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column" sample="1">
                    <field name="stage_id"/>
                    <field name="color"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="submission_deadline"/>
                    <field name="days_to_deadline"/>
                    <field name="is_urgent"/>
                    <field name="total_quotation_amount"/>
                    <field name="activity_ids"/>
                    <field name="activity_state"/>
                    <progressbar field="state" colors='{"won": "success", "lost": "danger", "submitted": "info"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''} oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="tender_title"/>
                                            </span>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        <div t-if="record.partner_id.value">
                                            <i class="fa fa-building-o"/> <field name="partner_id"/>
                                        </div>
                                        <div t-if="record.submission_deadline.value">
                                            <i class="fa fa-calendar"/> <field name="submission_deadline" widget="date"/>
                                            <t t-if="record.is_urgent.raw_value">
                                                <span class="badge badge-danger ms-2">Urgent!</span>
                                            </t>
                                        </div>
                                        <div t-if="record.total_quotation_amount.value">
                                            <i class="fa fa-money"/> <field name="total_quotation_amount" widget="monetary"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority"/>
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_tender_form" model="ir.ui.view">
            <field name="name">ics.tender.form</field>
            <field name="model">ics.tender</field>
            <field name="arch" type="xml">
                <form string="Tender">
                    <header>
                        <button name="action_start_technical_study" string="Start Technical Study"
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                        <button name="action_start_financial_study" string="Start Financial Study"
                            type="object" class="oe_highlight"
                            invisible="state != 'technical'"/>
                        <button name="action_create_purchase_agreement" string="Create RFQ (Purchase Agreement)"
                            type="object" class="oe_highlight"
                            invisible="state not in ['financial', 'quotation']"/>
                        <button name="action_compare_vendors" string="Compare Vendors"
                            type="object"
                            invisible="state not in ['financial', 'quotation']"/>
                        <button name="action_create_purchase_orders" string="Create Purchase Order(s)"
                            type="object" class="btn-primary"
                            invisible="state not in ['financial', 'quotation']"
                            help="Single Vendor: Creates 1 PO. Product-wise: Creates multiple POs per vendor"/>
                        <button name="action_prepare_quotation" string="Prepare Quotation"
                            type="object" class="oe_highlight"
                            invisible="state != 'financial'"/>
                        <button name="action_generate_quotation" string="Generate Sales Quotation"
                            type="object" class="oe_highlight"
                            invisible="state != 'quotation'"/>
                        <button name="action_submit_tender" string="Submit Tender"
                            type="object" class="oe_highlight"
                            invisible="state != 'quotation'"/>
                        <button name="action_mark_won" string="Mark as Won"
                            type="object" class="oe_highlight"
                            invisible="state not in ['submitted', 'evaluation']"/>
                        <button name="action_mark_lost" string="Mark as Lost"
                            type="object"
                            invisible="state not in ['submitted', 'evaluation']"/>
                        <button name="action_create_project" string="Create Project"
                            type="object" class="oe_highlight"
                            invisible="state != 'won' or project_count > 0"/>
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,technical,financial,quotation,submitted,evaluation,won"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_boq_lines" type="object"
                                class="oe_stat_button" icon="fa-list-ol">
                                <field name="boq_count" widget="statinfo" string="BoQ Lines"/>
                            </button>
                            <button name="action_view_purchase_agreements" type="object"
                                class="oe_stat_button" icon="fa-shopping-cart">
                                <field name="requisition_count" widget="statinfo" string="RFQs"/>
                            </button>
                            <button name="action_view_quotations" type="object"
                                class="oe_stat_button" icon="fa-file-text-o">
                                <field name="quotation_count" widget="statinfo" string="Quotations"/>
                            </button>
                            <button name="action_view_projects" type="object"
                                class="oe_stat_button" icon="fa-tasks"
                                invisible="project_count == 0">
                                <field name="project_count" widget="statinfo" string="Projects"/>
                            </button>
                            <button name="action_view_attachments" type="object"
                                class="oe_stat_button" icon="fa-paperclip">
                                <field name="attachment_count" widget="statinfo" string="Documents"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Won" bg_color="bg-success"
                            invisible="state != 'won'"/>
                        <widget name="web_ribbon" title="Lost" bg_color="bg-danger"
                            invisible="state != 'lost'"/>
                        <widget name="web_ribbon" title="Urgent" bg_color="bg-warning"
                            invisible="not is_urgent"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="tender_info">
                                <field name="tender_number"/>
                                <field name="tender_title"/>
                                <field name="tender_category"/>
                                <field name="tender_type" widget="radio"
                                    options="{'horizontal': true}"
                                    attrs="{'readonly': [('state', 'not in', ['draft', 'technical'])]}"/>
                                <field name="etimad_tender_id" options="{'no_create': True}"/>
                                <field name="lead_id" options="{'no_create': True}"/>
                                <field name="partner_id" options="{'no_create_edit': True}"/>
                            </group>
                            <group name="tender_management">
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="team_id"/>
                                <field name="stage_id" options="{'no_create': True}"/>
                                <field name="priority" widget="priority"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <group name="dates">
                                <field name="announcement_date"/>
                                <field name="document_purchase_date"/>
                                <field name="submission_deadline" widget="datetime"/>
                                <field name="days_to_deadline"/>
                                <field name="opening_date" widget="datetime"/>
                                <field name="is_urgent" invisible="1"/>
                            </group>
                            <group name="financial">
                                <field name="expected_revenue"/>
                                <field name="total_estimated_cost" widget="monetary"/>
                                <field name="total_vendor_cost" widget="monetary"/>
                                <field name="margin_percentage" widget="percentage"/>
                                <field name="margin_amount" widget="monetary"/>
                                <field name="total_quotation_amount" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" placeholder="Tender description and requirements..."/>
                            </page>
                            <page string="Bill of Quantities" name="boq">
                                <field name="boq_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="estimated_cost" sum="Total Estimated"/>
                                        <field name="selected_vendor_id"/>
                                        <field name="selected_vendor_price" sum="Total Vendor Cost"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Internal Notes" name="notes">
                                <field name="notes" placeholder="Internal notes and comments..."/>
                            </page>
                            <page string="Won/Lost Details" name="outcome"
                                invisible="state not in ['won', 'lost']">
                                <group>
                                    <group>
                                        <field name="winning_reason" invisible="state != 'won'"/>
                                        <field name="lost_reason" invisible="state != 'lost'"/>
                                    </group>
                                    <group invisible="state != 'won'">
                                        <field name="actual_revenue"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tender_search" model="ir.ui.view">
            <field name="name">ics.tender.search</field>
            <field name="model">ics.tender</field>
            <field name="arch" type="xml">
                <search string="Search Tenders">
                    <field name="name" string="Tender" filter_domain="['|','|',('name','ilike',self),('tender_number','ilike',self),('tender_title','ilike',self)]"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="team_id"/>
                    <field name="tag_ids"/>
                    <filter string="My Tenders" name="my_tenders" domain="[('user_id','=',uid)]"/>
                    <separator/>
                    <filter string="Urgent" name="urgent" domain="[('is_urgent','=',True)]"/>
                    <filter string="High Priority" name="high_priority" domain="[('priority','in',['2','3'])]"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Technical Study" name="technical" domain="[('state','=','technical')]"/>
                    <filter string="Financial Study" name="financial" domain="[('state','=','financial')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state','=','submitted')]"/>
                    <filter string="Won" name="won" domain="[('state','=','won')]"/>
                    <filter string="Lost" name="lost" domain="[('state','=','lost')]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active','=',True)]"/>
                    <filter string="Archived" name="archived" domain="[('active','=',False)]"/>
                    <separator/>
                    <filter string="Submission Date" name="submission_date" date="submission_deadline"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Responsible" name="group_user" context="{'group_by':'user_id'}"/>
                        <filter string="Sales Team" name="group_team" context="{'group_by':'team_id'}"/>
                        <filter string="Stage" name="group_stage" context="{'group_by':'stage_id'}"/>
                        <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                        <filter string="Category" name="group_category" context="{'group_by':'tender_category'}"/>
                        <filter string="Submission Month" name="group_submission_month" context="{'group_by':'submission_deadline:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_tender" model="ir.actions.act_window">
            <field name="name">Tenders</field>
            <field name="res_model">ics.tender</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_tender_search"/>
            <field name="context">{'search_default_my_tenders': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Tender
                </p>
                <p>
                    Start managing tenders from Etimad portal or create them manually.
                    Track technical and financial studies, compare vendor offers,
                    and generate quotations with built-in margin calculation.
                </p>
            </field>
        </record>

    </data>
</odoo>
