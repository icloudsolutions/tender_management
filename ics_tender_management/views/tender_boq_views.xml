<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_tender_boq_line_tree" model="ir.ui.view">
            <field name="name">ics.tender.boq.line.tree</field>
            <field name="model">ics.tender.boq.line</field>
            <field name="arch" type="xml">
                <tree string="Bill of Quantities" editable="bottom"
                    decoration-success="selected_vendor_id"
                    decoration-warning="not selected_vendor_id and tender_type == 'single_vendor'"
                    decoration-info="not selected_vendor_id and tender_type == 'product_wise'">
                    <field name="sequence" widget="handle"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                    <field name="estimated_cost" sum="Total Estimated"/>
                    <field name="selected_vendor_id"/>
                    <field name="selected_vendor_price" sum="Total Vendor Cost"/>
                    <field name="offer_count" string="Offers"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="tender_id" invisible="1"/>
                    <field name="tender_type" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_tender_boq_line_form" model="ir.ui.view">
            <field name="name">ics.tender.boq.line.form</field>
            <field name="model">ics.tender.boq.line</field>
            <field name="arch" type="xml">
                <form string="BoQ Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="tender_id" readonly="1"/>
                                <field name="product_id"/>
                                <field name="product_category_id"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="estimated_cost"/>
                                <field name="unit_price"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group string="Vendor Selection">
                            <group>
                                <field name="selected_vendor_id"/>
                                <field name="selected_vendor_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Technical Specifications" name="specifications">
                                <field name="specifications"/>
                            </page>
                            <page string="Vendor Offers" name="vendor_offers">
                                <field name="vendor_offer_ids">
                                    <tree editable="bottom" decoration-success="is_selected">
                                        <field name="vendor_id"/>
                                        <field name="unit_price"/>
                                        <field name="quantity" readonly="1"/>
                                        <field name="total_price" sum="Total"/>
                                        <field name="delivery_lead_time"/>
                                        <field name="payment_terms"/>
                                        <field name="is_selected" invisible="1"/>
                                        <button name="action_select_vendor" type="object"
                                            string="Select" class="btn-primary"
                                            invisible="is_selected"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Additional notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
