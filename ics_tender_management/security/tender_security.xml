<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_tender_management" model="ir.module.category">
            <field name="name">Tender Management</field>
            <field name="description">Manage tender processes and workflows</field>
            <field name="sequence">15</field>
        </record>

        <record id="group_tender_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_tender_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_tender_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_tender_management"/>
            <field name="implied_ids" eval="[(4, ref('group_tender_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="tender_rule_user" model="ir.rule">
            <field name="name">Tender: User - Own tenders</field>
            <field name="model_id" ref="model_ics_tender"/>
            <field name="domain_force">[
                '|',
                    ('user_id', '=', user.id),
                    ('user_id', '=', False)
            ]</field>
            <field name="groups" eval="[(4, ref('group_tender_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="tender_rule_manager" model="ir.rule">
            <field name="name">Tender: Manager - All tenders</field>
            <field name="model_id" ref="model_ics_tender"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_tender_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
