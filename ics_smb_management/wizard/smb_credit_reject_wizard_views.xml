<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_smb_credit_reject_wizard_form" model="ir.ui.view">
            <field name="name">smb.credit.reject.wizard.form</field>
            <field name="model">smb.credit.reject.wizard</field>
            <field name="arch" type="xml">
                <form string="Reject Credit">
                    <group>
                        <field name="order_id" readonly="1"/>
                        <field name="reason_id" options="{'no_create': False}" placeholder="Select a reason or add notes below"/>
                        <field name="reason_notes" placeholder="Optional: add details or type a custom reason"/>
                    </group>
                    <footer>
                        <button name="action_reject" string="Reject" type="object" class="btn-danger"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
