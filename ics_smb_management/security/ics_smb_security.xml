<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_smb_management" model="ir.module.category">
            <field name="name">SMB Management</field>
        </record>

        <record id="group_smb_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_smb_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can use SMB fields and send to Credit Control.</field>
        </record>

        <record id="group_smb_credit_control" model="res.groups">
            <field name="name">Credit Control</field>
            <field name="category_id" ref="module_category_smb_management"/>
            <field name="implied_ids" eval="[(4, ref('group_smb_user'))]"/>
            <field name="comment">Can approve or reject Sale Orders for credit (SMB-SOP-1).</field>
        </record>

    </data>
</odoo>
