<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_smb" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.smb</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='sale_management']" position="inside">
                    <block title="SMB Credit Control" id="smb_credit_block" name="smb_credit">
                        <setting id="smb_require_credit_approval_setting"
                            help="When enabled, Sale Orders must be Credit Approved before confirmation.">
                            <field name="smb_require_credit_approval" widget="boolean_toggle"/>
                        </setting>
                        <setting id="smb_default_project_template_setting"
                            title="Default Delivery Project Template"
                            help="Task template used when creating a delivery project from a Sale Order.">
                            <field name="smb_default_project_template_id" options="{'no_create': True}"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
