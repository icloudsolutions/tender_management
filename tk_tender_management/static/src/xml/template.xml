<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="tk_tender_management.template_tender_dashboard" owl="1">
        <section class="section tk_tender_dash">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mt32">
                        <h4 class="tk-primary">Tender Statistic</h4>
                        <hr class="border-primary"/>
                    </div>
                    <div class="col-md-6 align-items-stretch">
                        <div class="row">
                            <div class="col-md-4 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('all')">
                                <div class="card purple-bg p-32">
                                    <div class="card-body purple-bg tk-card-body">
                                        <img alt="users" width="40" src="tk_tender_management/static/src/img/tender.svg" />
                                        <h4 class="tk-st-1"> Tenders </h4>
                                        <h6 class="tk-st-2">  <t t-esc="state.tenderStats['total_tender']" /> </h6>
                                    </div>
                                </div>
                            </div> 
                            <div class="col-md-4 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('active_tender')">
                                <div class="card success-bg p-32">
                                    <div class="card-body success-bg tk-card-body">
                                        <img alt="users" width="40" src="tk_tender_management/static/src/img/tender-active.svg" />
                                        <h4 class="tk-st-1"> Active </h4>
                                        <h6 class="tk-st-2">  <t t-esc="state.tenderStats['active_tender']" /> </h6>
                                    </div>
                                </div>
                            </div>
                             <div class="col-md-4 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('in_progress')">
                                <div class="card danger-bg p-32">
                                    <div class="card-body danger-bg tk-card-body">
                                        <img alt="users" width="40" src="tk_tender_management/static/src/img/sheet.svg" />
                                        <h4 class="tk-st-1"> In Progress </h4>
                                        <h6 class="tk-st-2">  <t t-esc="state.tenderStats['tender_in_process']"/> </h6>
                                    </div>
                                </div>
                            </div> 
                             <div class="col-md-4 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('vendor')">
                                <div class="card info-bg p-32">
                                    <div class="card-body info-bg tk-card-body">
                                        <img alt="users" width="40" src="tk_tender_management/static/src/img/seller.svg" />
                                        <h4 class="tk-st-1"> Vendors </h4>
                                        <h6 class="tk-st-2">  <t t-esc="state.tenderStats['vendors']"/> </h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('categories')">
                                <div class="card warn-bg p-32">
                                    <div class="card-body warn-bg tk-card-body">
                                        <img alt="users" width="40" src="tk_tender_management/static/src/img/sorting.svg" />
                                        <h4 class="tk-st-1"> Categories </h4>
                                        <h6 class="tk-st-2">  <t t-esc="state.tenderStats['categories']"/> </h6>
                                    </div>
                                </div>
                            </div>  
                            <div class="col-md-4 mb-4 mt8 mb16">
                                <div class="card-body" t-ref="tenderType"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="tk-os-chart" t-ref="tenderCategory"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mt32 align-items-stretch">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4 class="tk-primary">Bidding</h4>
                                        <hr class="border-primary"/>
                                    </div>
                                    <div class="col-md-12 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('active_bid')">
                                        <div class="card success-bg p-32">
                                            <div class="card-body success-bg tk-card-body">
                                                <img alt="users" width="40" src="tk_tender_management/static/src/img/auction.svg" />
                                                <h4 class="tk-st-1"> Active Bid </h4>
                                                <h6 class="tk-st-2">  <t t-esc="state.tenderStats['active_bid']"/> </h6>
                                            </div>
                                        </div>
                                    </div> 
                                    <div class="col-md-12 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('pre_qualification')">
                                        <div class="card info-bg p-32">
                                            <div class="card-body info-bg tk-card-body">
                                                <img alt="users" width="40" src="tk_tender_management/static/src/img/hammer.svg" />
                                                <h4 class="tk-st-1"> Pre Qualification </h4>
                                                <h6 class="tk-st-2">  <t t-esc="state.tenderStats['pre_qualification_bid']"/> </h6>
                                            </div>
                                        </div>
                                    </div> 
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4 class="tk-primary">Pending Task</h4>
                                        <hr class="border-primary"/>
                                    </div>
                                    <div class="col-md-12 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('pending_request')">
                                        <div class="card danger-bg p-32">
                                            <div class="card-body danger-bg tk-card-body">
                                                <img alt="users" width="40" src="tk_tender_management/static/src/img/edit.svg" />
                                                <h4 class="tk-st-1"> Edit Request </h4>
                                                <h6 class="tk-st-2">  <t t-esc="state.tenderStats['pending_request']"/> </h6>
                                            </div>
                                        </div>
                                    </div> 
                                    <div class="col-md-12 mb-4 mt8 mb16" t-on-click="() => this.viewTenderStatic('pending_qualification')">
                                        <div class="card warn-bg p-32">
                                            <div class="card-body warn-bg tk-card-body">
                                                <img alt="users" width="40" src="tk_tender_management/static/src/img/pending.svg" />
                                                <h4 class="tk-st-1"> Pending Qualification </h4>
                                                <h6 class="tk-st-2">  <t t-esc="state.tenderStats['pending_qualification']"/> </h6>
                                            </div>
                                        </div>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 mt32">
                        <div class="col-md-12">
                            <h4 class="tk-center-primary">Tender Timeline</h4>
                            <hr class="border-primary"/>
                        </div>
                        <div class="tk-os-chart" t-ref="tenderTimeline"></div>
                    </div>
                </div>
            </div>
        </section>
    </t>
</templates>